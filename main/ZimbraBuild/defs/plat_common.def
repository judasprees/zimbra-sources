JETTY_MINOR_VER		:= 0
JETTY_MICRO_VER		:= 6.v20130930
JETTY_VERSION			:= $(JETTY_MAJOR_VER).$(JETTY_MINOR_VER).$(JETTY_MICRO_VER)
